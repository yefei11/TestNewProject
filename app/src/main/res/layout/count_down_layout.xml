<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hour_hight_tv"
        style="@style/min_text_style_font_gray"
        android:background="@drawable/shape_gray_rect_bg"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:text="1" />

    <TextView
        android:layout_marginLeft="@dimen/gap_micro"
        android:id="@+id/hour_low_tv"
        style="@style/min_text_style_font_gray"
        android:text="2"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/shape_gray_rect_bg"/>
    <TextView
        android:layout_marginLeft="@dimen/gap_micro"
        style="@style/min_text_style_font_gray"
        android:text=" ： "

      />
    <TextView
        android:id="@+id/minute_hight_tv"
        style="@style/min_text_style_font_gray"
        android:text="3"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/shape_gray_rect_bg"/>
    <TextView
        android:layout_marginLeft="@dimen/gap_micro"
        android:id="@+id/minute_low_tv"
        style="@style/min_text_style_font_gray"
        android:text="2"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/shape_gray_rect_bg"/>
    <TextView
        android:layout_marginLeft="@dimen/gap_micro"
        style="@style/min_text_style_font_gray"
        android:text=" ： "

        />
    <TextView
        android:id="@+id/second_hight_tv"
        style="@style/min_text_style_font_gray"
        android:text="3"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/shape_gray_rect_bg"/>
    <TextView
        android:id="@+id/second_low_tv"
        android:layout_marginLeft="@dimen/gap_micro"
        style="@style/min_text_style_font_gray"
        android:text="0"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/shape_gray_rect_bg"/>
</LinearLayout>